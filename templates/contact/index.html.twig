{% block body %}
<style>
    body{
        background-color: rgb(6, 22, 37);
        color: white;
        padding: 80px;
        /* background-color: #96C2DB;
        color: rgb(43, 46, 45); */
    }
    header{
        font-size: 24px;
        text-align: center;
        margin-top: -30px;
    }
    nav{
        margin-top: 30px;
        margin-bottom: 30px;
        width: 92vw;
    }
    .navbar-brand i {
        margin: 10px;
        font-size: xx-large;
    }
    /*Sélection agence et client*/
    .selections-container{
        width: 94vw;
        margin-left: 30px;
        margin-bottom: 30px;
    }
    .form-control {
        display: block;
        width: 75%;
    }
    input.form-control-client {
        width: 20%;
    }
    /* CLIENTS */
    .selection-client{
        margin-bottom: 30px;
    }
    .selection-client-container{
        width: 100vw;
        margin-left: 30px;
    }
    .selection-client-label{
        margin-right: 30px;
        font-size: 18px;
    }
    #client-sous-contrat-select, #agence-somafi{
        width: 385px;
        margin-top: 12px;
        margin-bottom: 15px;
    }

    /* AGENCES */
    .selection-agence{
        margin-bottom: 20px;
    }
    .selection-agence-label{
        margin-right: 30px;
        font-size: 18px;
    }
    #agence-sous-contrat-select{
        width: 250px;
        margin-left: 36px;
    }
    
    /*Infos client*/
    .client-infos{
        margin-top: 20px;
        margin-bottom: 30px;
    }
    .entete-client-infos{
        height: 25%;
        display: flex;
    }
    .infos-nombre-equipements h3, .infos-contrat h3{
        text-align: center;
    }
    .client-infos-nombre{
        font-size: 30px;
        text-align: center;
    }
    .card-body{
        height: 219px;
    }
    .card-title{
        text-align: center;
    }
    span{
        margin-bottom: 10px;
        font-size: 20px;
    }

    .btn i{
        margin: 5px;
    }

    /*Table équipements client*/
    th{
        font-size: 22px;
        text-align: center;
        margin-bottom: 3px;
    }
    thead th{
        position: sticky;
        top: 0;
        background-color: rgb(6, 22, 37);
    }
    td{
        border: 1px solid black;
        width: 20rem;
        height: 2rem;
        margin: 5px;
        text-align: center;
        font-size: 20px;
        color: black;
    }
    .bootstrap-table .fixed-table-container .table tfoot th .th-inner, .bootstrap-table .fixed-table-container .table thead th .th-inner {
        padding: .20rem;
    }
    .bootstrap-table .fixed-table-container .table tfoot th, .bootstrap-table .fixed-table-container .table thead th {
        vertical-align: top;
    }
    /* Couleurs des td selon statut de maintenance */
    .bkg_vert{
        width: 4rem;
        background-color: green;
        color: white;
        font-weight: bold;
    }
    .bkg_orange{
        width: 4rem;
        background-color: orange;
        color: white;
        font-weight: bold;
    }
    .bkg_rouge{
        width: 4rem;
        background-color: red;
        color: white;
        font-weight: bold;
    }
    .bkg_arret{
        width: 4rem;
        background-color: black;
        color: white;
        font-weight: bold;
    }
    .bkg_inaccessible{
        width: 4rem;
        background-color: yellow;
        font-weight: bold;
    }
    /* Couleurs des TR selon la visite */
    .bkg_row_visite_1{
        background-color: lightgray;
    }
    .bkg_row_visite_2{
        background-color: lightblue;
    }
    .bkg_row_visite_3{
        background-color: lightseagreen;
    }
    .bkg_row_visite_4{
        background-color: lightsalmon;
    }
    .bkg_row_visite_A{
        background-color: lightyellow;
    }

    /*Filtres de la table*/
    .filters-table{
        display: flex;
        width: 60%;
        justify-content: space-around;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
        margin: auto;
        margin-bottom: 30px;
        margin-top: 35px;
        border: 2px solid grey;
    }
    .filters-table h3{
        margin-top: 70px;
        font-size: 30px;
        color: black;
    }
    #filtre-trigramme, #filtre-visite, #filtre-statutdemaintenance{
        display: flex;
        flex-direction: column;
        width: 150px;
        align-items: center;
        background-color: rgba(63, 58, 58, 0.6);
        padding: 10px;
        border: 4px solid black;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #filtre-trigramme label, #filtre-visite label, #filtre-statutdemaintenance label{
        font-size: 20px;
        color: black;
    }
    .select_libelle, .select_visite, .select_statutdemaintenance{
        width: 100px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    #filtre-visite .btn.btn-danger, #filtre-statutdemaintenance .btn.btn-danger, #filtre-trigramme .btn.btn-danger {
        font-size: 10px;
        margin-left: 110px;
        margin-top: -10px;
    }
    #statutdemaintenance-dropdown{
        width: 110px;
    }

    /* MODAL */
    .modal{
        color: black;
        --bs-modal-width: 30%;
    }
    .modal label{
        margin-top: 15px;
    }
    textarea {
        resize: none;
        height: 100px;
    }
    .modal .form_control{
        width: 75%;
    }
    .modal .btn-primary{
        margin-top: 30px;
    }

</style>
    <h1>Ajout d'un Contact</h1>
    <form method="post">
        <label for="agence">Agence :</label>
        <select class="form-control" name="agence" id="agence">
            <option value="">Sélectionnez une agence</option>
            {% for key, agence in agences %}
                <option value="{{ agence }}" {{ app.request.request.get('agence') == key ? 'selected' : '' }}>{{ agence }}</option>
            {% endfor %}
        </select>
        <br>
        <button type="submit"  name ="submit_agence" class="btn btn-primary">Valider</button>
    </form>
    {% if agenceSelectionnee is not null %}
        <p>Agence sélectionnée : {{ agenceSelectionnee }}</p>
    {% endif %}
    <form action="" method="post">
        <input type="text" class="form-control form-control-client" placeholder="Search.." id="myInput" onkeyup="filterFunction()" >
        <select class="form-control" id="client-sous-contrat-select" name="clientName" onFocus="expand(this)" onBlur="unexpand(this)">
            <option value = "" selected> Select client </option> 
            {% if agenceSelectionnee == "Grenoble" or agenceSelectionnee == "grenoble" or agenceSelectionnee == "Gre"  or agenceSelectionnee == "gre"   or agenceSelectionnee == "S50"  or agenceSelectionnee == "s50" %}
                {% for client in contactsFromKizeo%}
                    <option value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s50">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Montpellier" or agenceSelectionnee == "montpellier" or agenceSelectionnee == "montp"  or agenceSelectionnee == "mon"   or agenceSelectionnee == "S100"   or agenceSelectionnee == "s100"%}
                {% for client in clientsMontpellier%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s100">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "ParisNord" or agenceSelectionnee == "paris nord" or agenceSelectionnee == "paris"  or agenceSelectionnee == "S80"  or agenceSelectionnee == "s80" %}
                {% for client in clientsParisNord%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s80">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Group" or agenceSelectionnee == "group" or agenceSelectionnee == "grou"  or agenceSelectionnee == "S10"   or agenceSelectionnee == "s10"%}
                {% for client in clientsGroup%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s10">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "St Etienne" or agenceSelectionnee == "st etienne" or agenceSelectionnee == "stetienne"  or agenceSelectionnee == "S40"   or agenceSelectionnee == "s40"%}
                {% for client in clientsStEtienne%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s40">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Lyon" or agenceSelectionnee == "lyon" or agenceSelectionnee == "ly"  or agenceSelectionnee == "S60"  or agenceSelectionnee == "s60" %}
                {% for client in clientsLyon%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s60">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Bordeaux" or agenceSelectionnee == "bordeaux" or agenceSelectionnee == "bor"  or agenceSelectionnee == "S70"   or agenceSelectionnee == "s70"%}
                {% for client in clientsBordeaux%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s70">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "HautsDeFrance" or agenceSelectionnee == "Portland" or agenceSelectionnee == "portland" or agenceSelectionnee == "hdf"   or agenceSelectionnee == "S120"   or agenceSelectionnee == "s120"%}
                {% for client in clientsHautsDeFrance%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s120">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Toulouse" or agenceSelectionnee == "toulouse" or agenceSelectionnee == "tou"  or agenceSelectionnee == "S130"   or agenceSelectionnee == "s130"%}
                {% for client in clientsToulouse%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s130">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "SMP" or agenceSelectionnee == "Epinal" or agenceSelectionnee == "epinal"  or agenceSelectionnee == "smp"  or agenceSelectionnee == "S140"   or agenceSelectionnee == "s140"%}
                {% for client in clientsEpinal%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s140">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Paca" or agenceSelectionnee == "PACA" or agenceSelectionnee == "brignoles" or agenceSelectionnee == "Brignoles"   or agenceSelectionnee == "S150"   or agenceSelectionnee == "s150"%}
                {% for client in clientsPaca%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s150">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Rouen" or agenceSelectionnee == "rouen" or agenceSelectionnee == "rou"  or agenceSelectionnee == "S160"   or agenceSelectionnee == "s160"%}
                {% for client in clientsRouen%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s160">{{ client }}</option>
                {% endfor %}
            {% elseif agenceSelectionnee == "Rennes" or agenceSelectionnee == "rennes" or agenceSelectionnee == "ren"  or agenceSelectionnee == "S170"   or agenceSelectionnee == "s170"%}
                {% for client in clientsRennes%}
                    <option  value="{{ client }} {{ agenceSelectionnee }}" id="client_selected_s170">{{ client }}</option>
                {% endfor %}
            {% else %}
                <option value=""></option>
            {% endif %}
        </select>
        <button type="submit"  name ="submitClient" class="btn btn-primary">Select Client</button>
    </form> 
    
{% endblock %}