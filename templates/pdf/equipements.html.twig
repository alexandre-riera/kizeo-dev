{# templates/pdf/equipements.html.twig - Version ultra-robuste #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Équipements du client</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            padding-top: 150px;
            margin: 0;
            background-color: white;
        }
        
        .page-break { page-break-after: always; }
        
        .equipement {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            background-color: white;
        }
        
        .equipement-header {
            background-color: #f5f5f5;
            padding: 5px;
            margin-bottom: 10px;
            font-weight: bold;
            border-left: 5px solid #007bff;
        }
        
        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }
        
        .info-table th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            background-color: #f9f9f9;
            width: 30%;
            font-weight: bold;
        }
        
        .info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        
        .equipment-image {
            width: 30%;
            text-align: center;
            vertical-align: top;
            padding: 10px;
        }
        
        .main-photo {
            max-width: 250px;
            max-height: 200px;
            border: 2px solid #ddd;
            border-radius: 4px;
        }
        
        .no-image {
            width: 250px;
            height: 200px;
            border: 2px dashed #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            color: #6c757d;
            font-style: italic;
        }
        
        .photos-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }
        
        .photo-container {
            flex: 0 0 calc(33.333% - 10px);
            text-align: center;
        }
        
        .photo {
            max-width: 100%;
            max-height: 150px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        .statut-icon {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-right: 8px;
            vertical-align: middle;
        }
        
        .statut-bon { background-color: #28a745; }
        .statut-attention { background-color: #ffc107; }
        .statut-urgent { background-color: #dc3545; }
        .statut-arret { background-color: #6c757d; }
        
        .anomalies {
            color: #dc3545;
            font-weight: bold;
            background-color: #f8d7da;
            padding: 5px;
            border-radius: 3px;
        }
        
        .stats-section {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 15px;
            margin: 20px 0;
        }
        
        .stats-title {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #495057;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        
        .stats-table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0;
            font-size: 11px;
        }
        
        .stats-table th {
            background-color: #ffff00;
            color: black;
            font-weight: bold;
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }
        
        .stats-table td {
            text-align: center;
            padding: 6px;
            border: 1px solid #ddd;
        }
        
        .stats-table .statut-cell {
            text-align: left;
            padding-left: 15px;
        }
        
        .logo-statut {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
            vertical-align: middle;
        }
        
        .logo-vert { background-color: #4CAF50; }
        .logo-orange { background-color: #FF9800; }
        .logo-rouge { background-color: #F44336; }
        .logo-noir { background-color: #424242; }
        
        .filter-info {
            background-color: #e7f3ff;
            border: 1px solid #b3d9ff;
            border-radius: 4px;
            padding: 10px;
            margin: 10px 0;
            font-size: 11px;
        }
        
        .filter-badge {
            background-color: #007bff;
            color: white;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 10px;
            margin-right: 5px;
        }
        
        .equipements-supplementaires { margin-top: 30px; }
        
        .section-title {
            background-color: #f5f5f5;
            padding: 10px;
            margin-bottom: 20px;
            border-left: 5px solid #007bff;
            font-size: 16px;
            font-weight: bold;
        }
        
        .document-footer {
            margin-top: 30px;
            font-size: 9px;
            color: #666;
            text-align: center;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    {# En-tête avec informations de filtrage si applicable #}
    {% if isFiltered is defined and isFiltered %}
        <div class="filter-info">
            <strong>Filtres appliqués :</strong>
            {% if clientAnneeFilter is defined and clientAnneeFilter %}
                <span class="filter-badge">Année: {{ clientAnneeFilter }}</span>
            {% endif %}
            {% if clientVisiteFilter is defined and clientVisiteFilter %}
                <span class="filter-badge">Visite: {{ clientVisiteFilter }}</span>
            {% endif %}
        </div>
    {% endif %}

    {# Section des statistiques si disponible - VERSION ROBUSTE #}
    {% if statistiques is defined and statistiques is iterable %}
        <div class="stats-section">
            <div class="stats-title">Statistiques des équipements</div>
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Statut</th>
                        <th>État</th>
                        <th>Nombre</th>
                        <th>Pourcentage</th>
                    </tr>
                </thead>
                <tbody>
                    {% set totalEquipments = 0 %}
                    
                    {# Calculer le total d'abord #}
                    {% if equipmentsWithPictures is defined and equipmentsWithPictures is iterable %}
                        {% set totalEquipments = equipmentsWithPictures|length %}
                    {% endif %}
                    
                    {% for etat, count in statistiques %}
                        {# Vérifications de sécurité #}
                        {% if etat is defined and count is defined and count is not iterable and count is not null %}
                            {% set countValue = count|number_format(0, '', '') %}
                            {% if countValue > 0 %}
                                {% set percentage = 0 %}
                                {% if totalEquipments > 0 %}
                                    {% set percentage = ((countValue / totalEquipments) * 100)|round(1) %}
                                {% endif %}
                                
                                <tr>
                                    <td style="text-align: center;">
                                        {% if etat == "Rien à signaler le jour de la visite." %}
                                            <span class="logo-statut logo-vert"></span>
                                        {% elseif "urgent" in etat|lower or "arrêt" in etat|lower %}
                                            <span class="logo-statut logo-rouge"></span>
                                        {% elseif "attention" in etat|lower or "surveillance" in etat|lower %}
                                            <span class="logo-statut logo-orange"></span>
                                        {% else %}
                                            <span class="logo-statut logo-noir"></span>
                                        {% endif %}
                                    </td>
                                    <td class="statut-cell">{{ etat }}</td>
                                    <td style="text-align: center;">{{ countValue }}</td>
                                    <td style="text-align: center;">{{ percentage }}%</td>
                                </tr>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    {# Section principale des équipements #}
    {% if equipmentsWithPictures is defined and equipmentsWithPictures is iterable and equipmentsWithPictures|length > 0 %}
        {% for equipmentData in equipmentsWithPictures %}
            {% if equipmentData.equipment is defined %}
                {% set equipment = equipmentData.equipment %}
                {% set pictures = equipmentData.pictures is defined ? equipmentData.pictures : [] %}
                
                <div class="equipement">
                    <div class="equipement-header">
                        Équipement {{ equipment.numeroEquipement ?? 'N/A' }} - {{ equipment.raisonSociale ?? 'N/A' }}
                        {% if equipment.etat is defined and equipment.etat %}
                            {% set statutClass = 'bon' %}
                            {% if 'urgent' in equipment.etat|lower or 'arrêt' in equipment.etat|lower %}
                                {% set statutClass = 'urgent' %}
                            {% elseif 'attention' in equipment.etat|lower or 'surveillance' in equipment.etat|lower %}
                                {% set statutClass = 'attention' %}
                            {% endif %}
                            <span class="statut-icon statut-{{ statutClass }}"></span>
                        {% endif %}
                    </div>
                    
                    <table class="info-table">
                        <tr>
                            <td rowspan="7" class="equipment-image">
                                {% if pictures is iterable and pictures|length > 0 and pictures[0].picture is defined %}
                                    <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement">
                                {% else %}
                                    <div class="no-image">
                                        <em>Aucune photo disponible</em>
                                    </div>
                                {% endif %}
                            </td>
                            <td style="width: 70%;">
                                <table style="width: 100%; border: none;">
                                    <tr>
                                        <th style="border: none; background: none; width: 25%;">Numéro</th>
                                        <td style="border: none;">{{ equipment.numeroEquipement ?? 'N/A' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Type</th>
                                        <td style="border: none;">{{ equipment.type ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Marque</th>
                                        <td style="border: none;">{{ equipment.marque ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Modèle</th>
                                        <td style="border: none;">{{ equipment.modele ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">État</th>
                                        <td style="border: none;">{{ equipment.etat ?? 'Non défini' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Mise en service</th>
                                        <td style="border: none;">
                                            {% if equipment.dateEnregistrement is defined and equipment.dateEnregistrement %}
                                                {{ equipment.dateEnregistrement|date('Y') }}
                                            {% else %}
                                                Année non présente sur équipement
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Repère site client</th>
                                        <td style="border: none;">{{ equipment.repereSiteClient ?? 'Non repèré' }}</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    {# Affichage des anomalies si présentes #}
                    {% if equipment.anomalies is defined and equipment.anomalies and equipment.anomalies|trim is not empty %}
                        <div class="anomalies">
                            <strong>Anomalies détectées :</strong> {{ equipment.anomalies }}
                        </div>
                    {% endif %}

                    {# Photos supplémentaires #}
                    {% if pictures is iterable and pictures|length > 1 %}
                        <div style="margin-top: 15px;">
                            <h4 style="font-size: 12px; margin-bottom: 10px;">
                                Photos supplémentaires ({{ pictures|length - 1 }} photo{{ pictures|length > 2 ? 's' : '' }})
                            </h4>
                            <div class="photos-grid">
                                {% for pictureData in pictures %}
                                    {% if not loop.first and pictureData.picture is defined %}
                                        <div class="photo-container">
                                            <img src="data:image/jpeg;base64,{{ pictureData.picture }}" class="photo" alt="Photo équipement">
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                {# Saut de page tous les 2 équipements #}
                {% if loop.index is divisible by(2) and not loop.last %}
                    <div class="page-break"></div>
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endif %}

    {# Section des équipements supplémentaires #}
    {% if equipementsSupplementaires is defined and equipementsSupplementaires is iterable and equipementsSupplementaires|length > 0 %}
        <div class="page-break"></div>
        <div class="equipements-supplementaires">
            <div class="section-title">
                Équipements supplémentaires ({{ equipementsSupplementaires|length }})
            </div>
            
            {% for equipmentData in equipementsSupplementaires %}
                {% if equipmentData.equipment is defined %}
                    {% set equipment = equipmentData.equipment %}
                    {% set pictures = equipmentData.pictures is defined ? equipmentData.pictures : [] %}
                    
                    <div class="equipement">
                        <table class="info-table">
                            <tr>
                                <td rowspan="7" class="equipment-image">
                                    {% if pictures is iterable and pictures|length > 0 and pictures[0].picture is defined %}
                                        <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement">
                                    {% else %}
                                        <div class="no-image">
                                            <em>Aucune photo disponible</em>
                                        </div>
                                    {% endif %}
                                </td>
                                <td style="width: 70%;">
                                    <table style="width: 100%; border: none;">
                                        <tr>
                                            <th colspan="2" style="border: none; background: #f5f5f5; text-align: center; padding: 8px; font-size: 14px;">
                                                Équipement {{ equipment.numeroEquipement ?? 'N/A' }} - {{ equipment.raisonSociale ?? 'N/A' }}
                                                {% if equipment.etat is defined and equipment.etat %}
                                                    {% if 'rien à signaler' in equipment.etat|lower %}
                                                        <span class="statut-icon statut-bon"></span>
                                                    {% elseif 'urgent' in equipment.etat|lower or 'arrêt' in equipment.etat|lower %}
                                                        <span class="statut-icon statut-urgent"></span>
                                                    {% elseif 'attention' in equipment.etat|lower %}
                                                        <span class="statut-icon statut-attention"></span>
                                                    {% endif %}
                                                {% endif %}
                                            </th>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none; width: 25%;">Type</th>
                                            <td style="border: none;">{{ equipment.type ?? 'Non renseigné' }}</td>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none;">Marque</th>
                                            <td style="border: none;">{{ equipment.marque ?? 'Non renseigné' }}</td>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none;">Modèle</th>
                                            <td style="border: none;">{{ equipment.modele ?? 'Non renseigné' }}</td>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none;">État</th>
                                            <td style="border: none;">{{ equipment.etat ?? 'Non défini' }}</td>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none;">Mise en service</th>
                                            <td style="border: none;">
                                                {% if equipment.dateEnregistrement is defined and equipment.dateEnregistrement %}
                                                    {{ equipment.dateEnregistrement|date('Y') }}
                                                {% else %}
                                                    Année non présente sur équipement
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="border: none; background: none;">Repère site client</th>
                                            <td style="border: none;">{{ equipment.repereSiteClient ?? 'Non repèré' }}</td>
                                        </tr>
                                        {# Ligne pour les anomalies #}
                                        {% if equipment.anomalies is defined and equipment.anomalies and equipment.anomalies|trim is not empty %}
                                        <tr>
                                            <th style="border: none; background: none;">Anomalies</th>
                                            <td style="border: none; color: #d9534f; font-weight: bold;">{{ equipment.anomalies }}</td>
                                        </tr>
                                        {% endif %}
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    {# Saut de page tous les 2 équipements supplémentaires #}
                    {% if loop.index is divisible by(2) and not loop.last %}
                        <div class="page-break"></div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {# Footer du document #}
    <div class="document-footer">
        Document généré automatiquement le {{ "now"|date_modify("+2 hours")|date('d/m/Y à H:i') }}
        {% if equipmentsWithPictures is defined and equipmentsWithPictures is iterable %}
            - {{ equipmentsWithPictures|length }} équipement{{ equipmentsWithPictures|length > 1 ? 's' : '' }} traité{{ equipmentsWithPictures|length > 1 ? 's' : '' }}
        {% endif %}
        {% if isFiltered is defined and isFiltered %}
            <br><em>Filtres appliqués lors de la génération</em>
        {% endif %}
    </div>
</body>
</html>