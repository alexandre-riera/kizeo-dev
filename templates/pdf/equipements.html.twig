{# templates/pdf/equipements.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Équipements du client - {{ client.nom ?? 'Client' }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            {% if backgroundImage is defined and backgroundImage %}
                background-image: url('{{ backgroundImage }}');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
            {% endif %}
            padding-top: 150px;
            margin: 0 !important;
        }
        
        .page-break {
            page-break-after: always;
        }
        
        .equipement {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.95);
        }
        
        .equipement-header {
            background-color: #f5f5f5;
            padding: 5px;
            margin-bottom: 10px;
            font-weight: bold;
            border-left: 5px solid #007bff;
        }
        
        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }
        
        .info-table th, .info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        
        .info-table th {
            background-color: #f9f9f9;
            width: 30%;
            font-weight: bold;
        }
        
        .equipment-image {
            width: 30%;
            text-align: center;
            vertical-align: top;
            padding: 10px;
        }
        
        .main-photo {
            max-width: 250px;
            max-height: 200px;
            border: 2px solid #ddd;
            border-radius: 4px;
        }
        
        .no-image {
            width: 250px;
            height: 200px;
            border: 2px dashed #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            color: #6c757d;
            font-style: italic;
        }
        
        .photos-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }
        
        .photo-container {
            flex: 0 0 calc(33.333% - 10px);
            text-align: center;
        }
        
        .photo {
            max-width: 100%;
            max-height: 150px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        /* Statut visuel */
        .statut-icon {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-right: 8px;
            vertical-align: middle;
        }
        
        .statut-bon { background-color: #28a745; }
        .statut-attention { background-color: #ffc107; }
        .statut-urgent { background-color: #dc3545; }
        .statut-arret { background-color: #6c757d; }
        
        /* Mise en évidence des anomalies */
        .anomalies {
            color: #dc3545;
            font-weight: bold;
            background-color: #f8d7da;
            padding: 5px;
            border-radius: 3px;
        }
        
        /* Section des statistiques */
        .stats-section {
            background-color: rgba(248, 249, 250, 0.95);
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 15px;
            margin: 20px 0;
        }
        
        .stats-title {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #495057;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        
        .stats-table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0;
            font-size: 11px;
        }
        
        .stats-table th {
            background-color: #ffff00;
            color: black;
            font-weight: bold;
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }
        
        .stats-table td {
            text-align: center;
            padding: 6px;
            border: 1px solid #ddd;
        }
        
        .stats-table .statut-cell {
            text-align: left;
            padding-left: 15px;
        }
        
        /* Informations de filtrage */
        .filter-info {
            background-color: #e7f3ff;
            border: 1px solid #b3d9ff;
            border-radius: 4px;
            padding: 10px;
            margin: 10px 0;
            font-size: 11px;
        }
        
        .filter-badge {
            background-color: #007bff;
            color: white;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 10px;
            margin-right: 5px;
        }
        
        /* Section équipements supplémentaires */
        .equipements-supplementaires {
            margin-top: 30px;
        }
        
        .section-title {
            background-color: #f5f5f5;
            padding: 10px;
            margin-bottom: 20px;
            border-left: 5px solid #007bff;
            font-size: 16px;
            font-weight: bold;
        }
        
        /* Footer */
        .document-footer {
            margin-top: 30px;
            font-size: 9px;
            color: #666;
            text-align: center;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    {# En-tête avec informations de filtrage si applicable #}
    {% if isFiltered is defined and isFiltered %}
        <div class="filter-info">
            <strong>Filtres appliqués :</strong>
            {% if clientAnneeFilter is defined and clientAnneeFilter %}
                <span class="filter-badge">Année: {{ clientAnneeFilter }}</span>
            {% endif %}
            {% if clientVisiteFilter is defined and clientVisiteFilter %}
                <span class="filter-badge">Visite: {{ clientVisiteFilter }}</span>
            {% endif %}
        </div>
    {% endif %}

    {# Section des statistiques si disponible #}
    {% if statistiques is defined and statistiques %}
        <div class="stats-section">
            <div class="stats-title">Statistiques des équipements</div>
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Statut</th>
                        <th>Nombre</th>
                        <th>Pourcentage</th>
                    </tr>
                </thead>
                <tbody>
                    {% for statut, data in statistiques %}
                        <tr>
                            <td class="statut-cell">
                                <span class="statut-icon statut-{{ statut|lower }}"></span>
                                {{ data.label }}
                            </td>
                            <td>{{ data.count }}</td>
                            <td>{{ data.percentage }}%</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    {# Section principale des équipements #}
    {% if equipmentsWithPictures is defined and equipmentsWithPictures|length > 0 %}
        {% for equipmentData in equipmentsWithPictures %}
            {% set equipment = equipmentData.equipment %}
            {% set pictures = equipmentData.pictures %}
            
            <div class="equipement">
                <div class="equipement-header">
                    Équipement {{ equipment.numeroEquipement }} - {{ equipment.raisonSociale }}
                    {% if equipment.etat is defined %}
                        {% set statutClass = 'bon' %}
                        {% if 'urgent' in equipment.etat|lower or 'arrêt' in equipment.etat|lower %}
                            {% set statutClass = 'urgent' %}
                        {% elseif 'attention' in equipment.etat|lower or 'surveillance' in equipment.etat|lower %}
                            {% set statutClass = 'attention' %}
                        {% endif %}
                        <span class="statut-icon statut-{{ statutClass }}"></span>
                    {% endif %}
                </div>
                
                <table class="info-table">
                    <tr>
                        <td rowspan="7" class="equipment-image">
                            {% if pictures|length > 0 %}
                                {# Utilisation de l'image locale encodée en base64 #}
                                <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement {{ equipment.numeroEquipement }}">
                            {% else %}
                                <div class="no-image">
                                    <em>Aucune photo disponible</em>
                                </div>
                            {% endif %}
                        </td>
                        <td style="width: 70%;">
                            <table style="width: 100%; border: none;">
                                <tr>
                                    <th style="border: none; background: none; width: 25%;">Numéro</th>
                                    <td style="border: none;">{{ equipment.numeroEquipement }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">Type</th>
                                    <td style="border: none;">{{ equipment.type ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">Marque</th>
                                    <td style="border: none;">{{ equipment.marque ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">Modèle</th>
                                    <td style="border: none;">{{ equipment.modele ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">État</th>
                                    <td style="border: none;">{{ equipment.etat ?? 'Non défini' }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">Mise en service</th>
                                    <td style="border: none;">{{ equipment.dateEnregistrement ? equipment.dateEnregistrement|date('Y') : 'Année non présente sur équipement' }}</td>
                                </tr>
                                <tr>
                                    <th style="border: none; background: none;">Repère site client</th>
                                    <td style="border: none;">{{ equipment.repereSiteClient ?? 'Non repèré' }}</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>

                {# Affichage des anomalies si présentes #}
                {% if equipment.anomalies is defined and equipment.anomalies is not null and equipment.anomalies|trim is not empty %}
                    <div class="anomalies">
                        <strong>Anomalies détectées :</strong> {{ equipment.anomalies }}
                    </div>
                {% endif %}

                {# Photos supplémentaires #}
                {% if pictures|length > 1 %}
                    <div style="margin-top: 15px;">
                        <h4 style="font-size: 12px; margin-bottom: 10px;">
                            Photos supplémentaires ({{ pictures|length - 1 }} photo{{ pictures|length > 2 ? 's' : '' }})
                        </h4>
                        <div class="photos-grid">
                            {% for pictureData in pictures %}
                                {% if not loop.first %}
                                    <div class="photo-container">
                                        <img src="data:image/jpeg;base64,{{ pictureData.picture }}" class="photo" alt="Photo équipement {{ equipment.numeroEquipement }}">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
            
            {# Saut de page tous les 2 équipements #}
            {% if loop.index is divisible by(2) and not loop.last %}
                <div class="page-break"></div>
            {% endif %}
        {% endfor %}
    {% endif %}

    {# Section des équipements supplémentaires #}
    {% if equipementsSupplementaires is defined and equipementsSupplementaires|length > 0 %}
        <div class="page-break"></div>
        <div class="equipements-supplementaires">
            <div class="section-title">
                Équipements supplémentaires ({{ equipementsSupplementaires|length }})
            </div>
            
            {% for equipmentData in equipementsSupplementaires %}
                {% set equipment = equipmentData.equipment %}
                {% set pictures = equipmentData.pictures %}
                
                <div class="equipement">
                    <table class="info-table">
                        <tr>
                            <td rowspan="7" class="equipment-image">
                                {% if pictures|length > 0 %}
                                    <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement {{ equipment.numeroEquipement }}">
                                {% else %}
                                    <div class="no-image">
                                        <em>Aucune photo disponible</em>
                                    </div>
                                {% endif %}
                            </td>
                            <td style="width: 70%;">
                                <table style="width: 100%; border: none;">
                                    <tr>
                                        <th colspan="2" style="border: none; background: #f5f5f5; text-align: center; padding: 8px; font-size: 14px;">
                                            Équipement {{ equipment.numeroEquipement }} - {{ equipment.raisonSociale }}
                                            {% if equipment.etat is defined %}
                                                {% if 'rien à signaler' in equipment.etat|lower %}
                                                    <span class="statut-icon statut-bon"></span>
                                                {% elseif 'urgent' in equipment.etat|lower or 'arrêt' in equipment.etat|lower %}
                                                    <span class="statut-icon statut-urgent"></span>
                                                {% elseif 'attention' in equipment.etat|lower %}
                                                    <span class="statut-icon statut-attention"></span>
                                                {% endif %}
                                            {% endif %}
                                        </th>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none; width: 25%;">Type</th>
                                        <td style="border: none;">{{ equipment.type ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Marque</th>
                                        <td style="border: none;">{{ equipment.marque ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Modèle</th>
                                        <td style="border: none;">{{ equipment.modele ?? 'Non renseigné' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">État</th>
                                        <td style="border: none;">{{ equipment.etat ?? 'Non défini' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Mise en service</th>
                                        <td style="border: none;">{{ equipment.dateEnregistrement ? equipment.dateEnregistrement|date('Y') : 'Année non présente sur équipement' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Repère site client</th>
                                        <td style="border: none;">{{ equipment.repereSiteClient ?? 'Non repèré' }}</td>
                                    </tr>
                                    {# Ligne pour les anomalies #}
                                    {% if equipment.anomalies is defined and equipment.anomalies is not null and equipment.anomalies|trim is not empty %}
                                    <tr>
                                        <th style="border: none; background: none;">Anomalies</th>
                                        <td style="border: none; color: #d9534f; font-weight: bold;">{{ equipment.anomalies }}</td>
                                    </tr>
                                    {% endif %}
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
                
                {# Saut de page tous les 2 équipements supplémentaires #}
                {% if loop.index is divisible by(2) and not loop.last %}
                    <div class="page-break"></div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {# Footer du document #}
    <div class="document-footer">
        Document généré automatiquement le {{ "now"|date_modify("+2 hours")|date('d/m/Y à H:i') }}
        {% if equipmentsWithPictures is defined %}
            - {{ equipmentsWithPictures|length }} équipement{{ equipmentsWithPictures|length > 1 ? 's' : '' }} traité{{ equipmentsWithPictures|length > 1 ? 's' : '' }}
        {% endif %}
        {% if isFiltered is defined and isFiltered %}
            <br><em>Filtres appliqués lors de la génération</em>
        {% endif %}
    </div>
</body>
</html>